<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TextureView
			android:id="@+id/texView"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>

		<ImageView
			android:layout_width="300.0dp"
			android:layout_height="100.0dp"
			android:src="@drawable/rect"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"	/>

		<Button
			android:layout_width="70.0dp"
			android:layout_height="70.0dp"
			android:layout_marginBottom="15.0dp"
			android:layout_centerHorizontal="true"
			android:layout_alignParentBottom="true"
			android:text="snap"
			android:id="@+id/button1"
			android:background="@drawable/snapbtn"
		/>
	</RelativeLayout>
</LinearLayout>
